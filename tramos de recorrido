#include <iostream>
using namespace std;

int main()
{
   double T, T1, T2, T3;
   cout<<"favor de poner la hora en numero entero y minutos decimal";
   cin>>T1;
   cin>>T2;
   cin>>T3;
   
   T=T1+T2+T3;
   std::cout << T <<"horas de recorrido"<< std::endl;
   // ejemplo 1.30 1 es una hora y .30 minutos entonces llevarian 1 hora y 30 minutos de camino

    return 0;
}
